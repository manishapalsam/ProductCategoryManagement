@model IEnumerable<ProductCategoryManagement.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Product List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Product List</h1>
        <div class="row">
            <div class="col-md-12">
                <a asp-action="Create" class="btn btn-primary" style=" float: right;margin-top: 10px;">Create New Product</a>
            </div>
        </div>
        @if (ViewBag.Msg != null && ViewBag.Msg == "NO RECORDS FOUND")
        {
            <p>@ViewBag.Msg</p>

        }
        else
        {

            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Category Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td>@product.Category.CategoryName</td>
                                    <td>
                                        <form asp-action="Edit" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@product.ProductId" />
                                            <button type="submit" class="btn btn-primary">Edit</button>
                                        </form>
                                        |
                                        <form asp-action="Delete" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@product.ProductId" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        
        }
    </div>

    @if (ViewBag.Msg != null)
    {
        <script>
            window.onload = function () {
                alert("@ViewBag.Msg");
            };

        </script>
    }
</body>
</html>
